@using System
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title - PERRERA ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="container">
        <div id="logo"> <img src="~/Content/images/header.jpg" alt="" border="0" /></div>
        @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div id="header">
            <ul>
                <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                <li>@Html.ActionLink("Razas", "Index", "Razas")</li>
                <li>@Html.ActionLink("Jaulas", "Index", "Jaulas")</li>
                <li>@Html.ActionLink("Empleados", "Index", "Empleados")</li>
                <li>@Html.ActionLink("Perros", "Index", "Perros")</li>

            </ul>
        </div>
    </div>


<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year </p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
