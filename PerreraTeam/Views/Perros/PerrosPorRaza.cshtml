@model IEnumerable<PerreraTeam.ViewModels.PerrosPorRazaViewModel>

@{
    ViewBag.Title = "PerrosPorRaza";
}

<h2>PerrosPorRaza</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombrePerro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreRaza)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePerro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreRaza)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
