@model IEnumerable<PerreraTeam.Domain.Models.Adopciones>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Perro.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaEntrega)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Perro.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaEntrega)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { clienteId = item.ClienteId, empleadoId = item.EmpleadoId, perroId = item.PerroId, fechaEntrega = item.FechaEntrega }) |
            @Html.ActionLink("Details", "Details", new { clienteId = item.ClienteId, empleadoId = item.EmpleadoId, perroId = item.PerroId, fechaEntrega = item.FechaEntrega }) |
            @Html.ActionLink("Delete", "Delete", new { clienteId = item.ClienteId, empleadoId = item.EmpleadoId, perroId = item.PerroId, fechaEntrega = item.FechaEntrega })
        </td>
    </tr>
}

</table>
